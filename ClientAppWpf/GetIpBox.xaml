<Window x:Class="ClientAppWpf.GetIpBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientAppWpf"
        mc:Ignorable="d"
        Title="GetIpBox" SizeToContent="WidthAndHeight">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="160"/>
            <ColumnDefinition MinWidth="60"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Text="Type Server IP and Port:"/>
        <TextBox x:Name="IpBox" Margin="5" Grid.Row="1" Grid.Column="0"/>
        <Label Content=":" Grid.Row="1" Grid.Column="2" Margin="-7,0,0,0" HorizontalAlignment="Left"/>
        <TextBox x:Name="PortBox" Margin="5" MinWidth="40" Grid.Column="1" Grid.Row="1"/>

        <WrapPanel Margin="0, 15, 0 ,0" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button IsDefault="True" Click="Ok_Click" Margin="2" MinWidth="60">OK</Button>
            <Button IsCancel="True"  Margin="2" MinWidth="60">Cancel</Button>
        </WrapPanel>
    </Grid>
</Window>
